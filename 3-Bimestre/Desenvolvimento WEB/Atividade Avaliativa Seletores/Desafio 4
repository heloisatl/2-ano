        let numeroCliques = 0;

        const botao = document.querySelector('button');
        const textos = document.querySelector('p'); 

        botao.addEventListener('click', function(){
           numeroCliques++;
           textos.innerText = "Bot√£o foi clicado: " + numeroCliques + " vezes";

        });

    </script>
    
