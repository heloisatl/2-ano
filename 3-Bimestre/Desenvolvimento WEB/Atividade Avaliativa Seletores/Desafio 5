<body>

    <button>Adicione um novo elemento para a lista</button>

    <h1>Personagens daoras</h1>

    <li>Kick Buttowski</li>
    <li>Mordecay</li>
    <li>Rigby</li>

    <script>

        const botao = document.querySelector('button');

        const lista = document.querySelector('li');



        botao.addEventListener('click', function(){

            const adiciona = document.createElement('li');

            adiciona.textContent = 'George Russell';

            lista.appendChild(adiciona);

        });
      
    </script>
    
</body>
